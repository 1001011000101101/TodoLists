@using TodoLists.Models;
@using Microsoft.AspNetCore.Html;

@{
    @*<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>*@
    <script src="https://cdnjs.cloudflare.com/ajax/libs/foundation/6.4.1/js/foundation.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/vue/2.3.4/vue.min.js"></script>
    <script src="https://use.fontawesome.com/24fc242ce0.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/tween.js/16.3.5/Tween.min.js"></script>

    <script src="~/js/core.js" asp-append-version="true"></script>
    <script src="~/js/linq.js" asp-append-version="true"></script>
    <script src="~/js/jq.js" asp-append-version="true"></script>
}

@if (ViewBag.Scripts != null)
{
    foreach (string s in ViewBag.Scripts)
    {
        <environment include='Development'>
            <script src='@s' asp-append-version='true'></script>
        </environment>
        <environment exclude='Development'>
            <script src='@s' asp-append-version='true'></script>
        </environment>
    }
}

<script type="text/html" id="scrData">
    @(new HtmlString(ViewBag.Data ?? string.Empty))
</script>

<script type="text/javascript">
    var host = window.host || {};
    host.arp = '@Url.Content("~/")';

    if (typeof host.onLoad == "function") {
        host.onLoad();
    }
</script>